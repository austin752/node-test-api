<div class="container">
    <div class="row">
        <div class="col-6 mx-auto">
            <div class="signin-form profile">
                <h3>Login</h3>
                <div class="login-form">
                    <form action="/users" method="POST">
                        <input type="text" name="logemail" placeholder="E-mail" required="true" class="form-control my-3">
                        <input type="password" name="logpassword" placeholder="Password" required="true" class="form-control my-3">
                        <button class="btn btn-success">Login</button>
                    </form>
                </div>
                <p class="my-3"><a href="/users/register"> Don't have an account?</a></p>
            </div>
        </div>
    </div>
</div>